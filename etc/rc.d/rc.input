PATH=/sbin:/bin:/usr/sbin:/usr/bin
PROCDIR=/proc/bus/input

. /etc/hotplug.d/hotplug.functions

input_reset_state () {
    PRODUCT=
    NAME=
    PHYS=
    EV=
    KEY=
    REL=
    ABS=
    MSC=
    LED=
    SND=
    FF=

}

ACTION=add
export ACTION PRODUCT NAME PHYS EV KEY REL ABS MSC LED SND FF
input_reset_state

while read line; do
  case "$line" in
    I:* )	# product ID
      eval "${line#I: }"
      PRODUCT="$Bus/$Vendor/$Product/$Version"
    ;;
    N:* )	# name
      eval "${line#N: }"
      NAME="$Name"
    ;;
    P:* )	# Physical
      eval "${line#P: }"
      PHYS="$Phys"
    ;;
    B:* )	# Controls supported
      line="${line#B: }"
      eval "${line%%=*}=\"${line#*=}\""
    ;;
    "" )	# End of block
      for I in /etc/hotplug/input/*.hotplug;do
       test -x $I && $I
      done;
      input_reset_state
    ;;
  esac
done < $PROCDIR/devices
